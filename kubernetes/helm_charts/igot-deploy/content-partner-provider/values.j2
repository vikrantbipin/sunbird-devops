### Default variable file for content_partner_provider-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ docker_hub_url }}


env:
  javaoptions: {{content_partner_provider_java_mem_limit|default('-Xmx600m')}}

replicaCount: {{content_partner_provider_replicacount|default(1)}}
repository: {{ image_content_partner_provider_service }}
image_tag: {{image_tag}}
resources:
  requests:
    cpu: {{content_partner_provider_cpu_req|default('100m')}}
    memory: {{content_partner_provider_mem_req|default('100Mi')}}
  limits:
    cpu: {{content_partner_provider_cpu_limit|default('1')}}
    memory: {{content_partner_provider_mem_limit|default('1024Mi')}}
network:
  port: {{ service_content_partner_provider_port }}
  targetport: {{ service_content_partner_provider_port }}
strategy:
  type: RollingUpdate
  maxsurge: {{ content_partner_provider_maxsurge|default('25%') }}
  maxunavailable: {{ content_partner_provider_maxunavailable|default('25%') }}

content_partner_provider_backend_basepath: {{ content_partner_provider_backend_basepath | default('/keys/') }}

