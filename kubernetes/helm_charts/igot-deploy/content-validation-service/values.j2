### Default variable file for lms-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ docker_hub_url }}


env:
  javaoptions: {{content_validation_java_mem_limit|default('-Xmx600m')}}

replicaCount: {{content_validation_replicas|default(1)}}
repository: {{ image_content_validation_service }}
image_tag: {{image_tag}}
resources:
  requests:
    cpu: {{content_validation_cpu_req|default('100m')}}
    memory: {{content_validation_mem_req|default('100Mi')}}
  limits:
    cpu: {{content_validation_cpu_limit|default('1')}}
    memory: {{content_validation_mem_limit|default('1024Mi')}}
network:
  port: {{ service_content_validation_port }}
  targetport: {{ service_content_validation_port }}
strategy:
  type: RollingUpdate
  maxsurge: {{ content_validation_maxsurge|default('25%') }}
  maxunavailable: {{ content_validation_maxunavailable|default('25%') }}




serviceMonitor:
  enabled: true
  labels: # labels with which the prometheus choose the serviceMonitor
    app: prometheus-operator
    release: prometheus-operator

autoscaling:
  enabled: {{ content-validation-service_autoscaling_enabled | default('false') }}
  minReplicas: {{ content-validation-service_autoscaling_minReplicas|default(1) }}
  maxReplicas: {{ content-validation-service_autoscaling_maxReplicas|default(2) }}
  targetCPUUtilizationPercentage: {{ content-validation-service_autoscaling_targetCPUUtilizationPercentage|default(60) }}
  targetMemoryUtilizationPercentage: {{ content-validation-service_autoscaling_targetMemoryUtilizationPercentage|default('') }}

