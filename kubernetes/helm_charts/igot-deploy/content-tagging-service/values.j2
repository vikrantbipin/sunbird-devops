### Default variable file for lms-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ docker_hub_url }}


env:
  javaoptions: {{lms_java_mem_limit|default('-Xmx600m')}}

replicaCount: {{lms_replicacount|default(1)}}
repository: {{ image_content_tagging_service }}
image_tag: {{image_tag}}
resources:
  requests:
    cpu: {{lms_cpu_req|default('200m')}}
    memory: {{lms_mem_req|default('100Mi')}}
  limits:
    cpu: {{lms_cpu_limit|default('1')}}
    memory: {{lms_mem_limit|default('5120Mi')}}
network:
  port: {{ service_content_tagging_port }}
  targetport: {{ service_content_tagging_port }}
strategy:
  type: RollingUpdate
  maxsurge: {{ lms_maxsurge|default('25%') }}
  maxunavailable: {{ lms_maxunavailable|default('25%') }}

ui_proxies_bulk_upload: {{ host_bulk_upload }}



serviceMonitor:
  enabled: true
  labels: # labels with which the prometheus choose the serviceMonitor
    app: prometheus-operator
    release: prometheus-operator

autoscaling:
  enabled: {{ content-tagging-service_autoscaling_enabled | default('false') }}
  minReplicas: {{ content-tagging-service_autoscaling_minReplicas|default(1) }}
  maxReplicas: {{ content-tagging-service_autoscaling_maxReplicas|default(2) }}
  targetCPUUtilizationPercentage: {{ content-tagging-service_autoscaling_targetCPUUtilizationPercentage|default(60) }}
  targetMemoryUtilizationPercentage: {{ content-tagging-service_autoscaling_targetMemoryUtilizationPercentage|default('') }}

